{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug DSA (GDB)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/main.exe",   // Change if your binary has a different name/path
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe", // Make sure this path is correct
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }
  